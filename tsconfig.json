{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6"
    ],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "removeComments": true,
    "declaration": true,
    "outDir": "./cjs",
    // type check
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    // paths
    "rootDir": "./ts",
    "paths": {
      "@src/*": [
        "./ts/*"
      ],
      "@src": [
        "./ts/index.ts"
      ]
    }
  },
  "include": [
    "./ts",
    "./test"
  ],
  "exclude": [
    "./node_modules",
    "./cjs",
    "./mjs"
  ]
}
