{
  "compilerOptions": {
    "lib": [
      "ES6",
      "ES5",
      "ESNext"
    ],
    "module": "ES6",
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}
