{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "esnext"
    ],
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./esm"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "/node_modules",
    "/esm"
  ]
}
