{
  "compilerOptions": {
    "lib": [
      "ES6"
    ],
    "module": "ES6",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@js-pure/*": [
        "./src/*",
        "./modules/cjs/*",
        "./modules/esm/*"
      ]
    },
    "allowJs": true,
    "checkJs": false,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./modules"
  ]
}
