{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "ES5",
      "ES6",
      "ESNext"
    ],
    "module": "NodeNext",
    "baseUrl": "src",
    "paths": {
      "@js-pure/*": [
        "./*"
      ]
    },
    "allowJs": true,
    "checkJs": false,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "../node_modules",
    "../modules"
  ]
}
