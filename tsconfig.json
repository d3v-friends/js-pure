{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "esnext"
    ],
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    // type check
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": false,
    // path
    "rootDir": "./src"
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./node_modules",
    "./config",
    "./dist"
  ]
}
