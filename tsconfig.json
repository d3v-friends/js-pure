{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "esnext"
    ],
    "target": "es6",
    "module": "es6",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    // type check
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": false,
    // paths
    "rootDir": ".",
    // compile types,
    "inlineSourceMap": true,
    "removeComments": true,
    "declaration": true,
    // d.ts only compile
    "emitDeclarationOnly": false
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": [
    "./ts/*",
    "./test/*"
  ],
  "exclude": [
    "./dist",
    "./node_modules",
    "./jest.config.ts",
    "./webpack.config.ts",
    "./dist/cjs",
    "./dist/mjs"
  ]
}
