{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "esnext"
    ],
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "inlineSourceMap": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "inlineSourceMap": true
    }
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "/node_modules",
    "/dist"
  ]
}
